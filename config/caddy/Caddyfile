import /etc/caddy/extras/*.caddy

files.{$DOMAIN} {
    tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}

    reverse_proxy filebrowser:6464
}

notes.{$DOMAIN} {
    tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
    
    reverse_proxy silverbullet:3000
}

music.{$DOMAIN} {
    tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
    
    reverse_proxy polaris:5050
}